<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="opengl.android.com.opengldemo.presenter.MainPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="clickOpenGLWallpaper"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/btn_change_color_wallpaper"
            android:textAllCaps="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="clickFollowFingerWallpaper"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/btn_follow_finger_wallpaper"
            android:textAllCaps="false" />

    </LinearLayout>
</layout>